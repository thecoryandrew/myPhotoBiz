@using MyPhotoBiz.Models;
@model IEnumerable<PhotoShoot>
@{
    ViewBag.Title = "Photo Shoots";
    ViewBag.SubTitle = "Index";
}

<div class="container-fluid">

    @await Html.PartialAsync("~/Views/Shared/Partials/_PageTitle.cshtml")

    <div class="row justify-content-center">
        <div class="col-xxl-10">
            <div data-table data-table-rows-per-page="10" class="card">
                <div class="card-header border-light justify-content-between">
                    <div class="d-flex gap-2">
                        <div class="app-search">
                            <input data-table-search type="text" class="form-control" placeholder="Search photo shoots...">
                            <i data-lucide="search" class="app-search-icon text-muted"></i>
                        </div>

                        <button data-table-delete-selected class="btn btn-danger d-none">Delete</button>

                        <a asp-action="Create" class="btn btn-purple rounded-circle btn-icon">
                            <i class="ti ti-plus fs-lg"></i>
                        </a>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <span class="me-2 fw-semibold">Show:</span>

                        <!-- Records Per Page -->
                        <div>
                            <select data-table-set-rows-per-page class="form-select form-control my-1 my-md-0">
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-custom table-centered table-select table-hover w-100 mb-0">
                        <thead class="bg-light bg-opacity-25 thead-sm">
                            <tr class="text-uppercase fs-xxs">
                                <th scope="col" style="width: 1%;">
                                    <input data-table-select-all class="form-check-input form-check-input-light fs-14 mt-0" type="checkbox" id="checkAll">
                                </th>
                                <th data-table-sort="title">Title</th>
                                <th data-table-sort>Client</th>
                                <th data-table-sort>Scheduled Date</th>
                                <th data-table-sort>Location</th>
                                <th data-table-sort>Status</th>
                                <th data-table-sort>Price</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var shoot in Model)
                            {
                                <tr>
                                    <td>
                                        <input class="form-check-input form-check-input-light fs-14 mt-0" type="checkbox" value="@shoot.Id">
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-start align-items-center gap-2">
                                            <div class="avatar avatar-sm">
                                                <span class="avatar-title bg-info-subtle text-info rounded-circle">
                                                    <i class="ti ti-camera"></i>
                                                </span>
                                            </div>
                                            <div>
                                                <h5 class="text-nowrap mb-0 lh-base fs-base">
                                                    <a data-sort="title" asp-action="Details" asp-route-id="@shoot.Id" class="link-reset">
                                                        @shoot.Title
                                                    </a>
                                                </h5>
                                                <p class="text-muted fs-xs mb-0">@shoot.Location</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@shoot.Client.FirstName @shoot.Client.LastName</td>
                                    <td>@shoot.ScheduledDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>@shoot.Location</td>
                                    <td>
                                        <span class="badge badge-@(shoot.Status == PhotoShootStatus.Completed ? "success" : shoot.Status == PhotoShootStatus.Scheduled ? "primary" : shoot.Status == PhotoShootStatus.InProgress ? "warning" : "secondary")">
                                            @shoot.Status
                                        </span>
                                    </td>
                                    <td>@shoot.Price.ToString("C")</td>
                                    <td>
                                        <div class="d-flex align-items-center justify-content-center gap-1">
                                            <a asp-action="Details" asp-route-id="@shoot.Id" class="btn btn-light btn-icon btn-sm rounded-circle" title="View Details">
                                                <i class="ti ti-eye fs-lg"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@shoot.Id" class="btn btn-light btn-icon btn-sm rounded-circle" title="Edit">
                                                <i class="ti ti-edit fs-lg"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@shoot.Id" class="btn btn-light btn-icon btn-sm rounded-circle" title="Delete">
                                                <i class="ti ti-trash fs-lg"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <div data-table-pagination-info="photo shoots"></div>
                        <div data-table-pagination></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts
{
    <!-- Custom table -->
    <script src="~/js/pages/custom-table.js"></script>
}